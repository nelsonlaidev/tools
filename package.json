{
  "name": "tools",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Nelson Lai <me@nelsonlai.dev> (https://github.com/nelsonlaidev/)",
  "type": "module",
  "scripts": {
    "build": "next build",
    "check": "pnpm lint && pnpm type-check && pnpm format:check && pnpm check:spelling && pnpm check:knip",
    "check:knip": "knip",
    "check:spelling": "cspell --no-progress --no-summary --no-must-find-files --unique",
    "clean": "rm -rf .next",
    "dev": "next dev --turbo",
    "format:check": "prettier --cache --check --ignore-path .gitignore --ignore-path .prettierignore .",
    "format:write": "prettier --cache --write --list-different --ignore-path .gitignore --ignore-path .prettierignore .",
    "preinstall": "npx --yes only-allow pnpm",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint --fix .",
    "prepare": "husky",
    "start": "next start",
    "type-check": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{mjs,js,ts,tsx}": "eslint --fix",
    "**/*": [
      "prettier --write --ignore-unknown",
      "pnpm check:spelling"
    ]
  },
  "dependencies": {
    "@icons-pack/react-simple-icons": "^11.1.0",
    "@mantine/hooks": "^7.16.1",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@react-pdf-viewer/core": "^3.12.0",
    "@react-pdf-viewer/default-layout": "^3.12.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@types/uuid": "^10.0.0",
    "clsx": "^2.1.1",
    "colord": "^2.9.3",
    "cva": "1.0.0-beta.4",
    "file-saver": "^2.0.5",
    "filesize": "^10.1.6",
    "geist": "^1.3.1",
    "lucide-react": "^0.474.0",
    "next": "^15.1.6",
    "pdfjs-dist": "4.10.38",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-dropzone": "^14.3.5",
    "react-textarea-autosize": "^8.5.9",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "use-debounce": "^10.0.4",
    "usehooks-ts": "^3.1.0",
    "uuid": "^11.0.5",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@nelsonlaidev/eslint-config": "^1.0.0",
    "@nelsonlaidev/prettier-config": "^0.1.0",
    "@nelsonlaidev/typescript-config": "^0.0.3",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/file-saver": "^2.0.7",
    "@types/node": "24.3.1",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.9",
    "cspell": "^9.2.1",
    "czg": "^1.12.0",
    "eslint": "^9.35.0",
    "husky": "^9.1.7",
    "knip": "^5.63.1",
    "lint-staged": "^16.1.6",
    "postcss-load-config": "^6.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=22"
  }
}
